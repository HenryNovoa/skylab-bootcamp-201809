
extends layout
block content  
  p Your postits
  a(href='/logout') logout
  form(action='/postits', method='POST')
    textarea(type='text', name='text', placeholder='write text here')
    button(type='submit') Create
    ul.list-group
    - postits.map(post => {`
    li.list-group-item.postit
      ${text} 
      input(type='hidden', name='postitId', value='${post.id}')
      button(type='submit', name='action', value='delete')
        i.fas.fa-trash-alt.trash
      button
     `
     ).join('')-}
extends layout/default

block content
    section(class='main__auth')
        section(class='login')
        h2(class='login__title') Login to Cello
        form(class='form')
            input(name='username')
            input(name='password', type='password')
            button(class='form__button') Log In
            p(class='form__text')
                | or 
                button(class='form__link', type='button') Sign Up
